{
  "compilerOptions": {
    // TODO: Configure TypeScript compiler options
    // Set up:
    // - target (ES2022)
    // - lib
    // - module and moduleResolution
    // - paths aliases (@/*)
    // - jsx settings
    // - strict mode
    // - and all other necessary options
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", ".next/types/**/*.ts", "lib/password.j=ts"],
  "exclude": ["node_modules"]
}
